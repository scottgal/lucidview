<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:MarkdownViewer.Controls"
             x:Class="MarkdownViewer.Browser.MainView">
    <Grid RowDefinitions="Auto,Auto,2*,Auto,Auto,2*,Auto,3*"
          Margin="16"
          RowSpacing="10">
        <TextBlock Grid.Row="0"
                   FontSize="22"
                   FontWeight="Bold"
                   Text="Avalonia Browser + Naiad Spike" />

        <TextBlock Grid.Row="1"
                   Text="This confirms Naiad can run inside an Avalonia WebAssembly host." />

        <TextBox x:Name="InputBox"
                 Grid.Row="2"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 MinHeight="160" />

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    Spacing="8">
            <Button Content="Render Mermaid"
                    Click="OnRenderClick" />
            <TextBlock x:Name="StatusText"
                       VerticalAlignment="Center"
                       Text="Ready" />
        </StackPanel>

        <TextBlock Grid.Row="4"
                   Text="Raw SVG"
                   FontWeight="SemiBold" />

        <TextBox x:Name="SvgBox"
                 Grid.Row="5"
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 MinHeight="220" />

        <TextBlock Grid.Row="6"
                   Text="Native DiagramCanvas (Avalonia vector rendering)"
                   FontWeight="SemiBold" />
        <Border Grid.Row="7"
                BorderThickness="1"
                BorderBrush="#CDD5DF"
                Background="#FFFFFF"
                Padding="8">
            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <controls:DiagramCanvas x:Name="DiagramCanvas"
                                        MinHeight="260" />
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
