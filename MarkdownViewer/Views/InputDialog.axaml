<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MarkdownViewer.Views.InputDialog"
        Title="Input"
        Width="450" Height="160"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        ShowInTaskbar="False">

    <Grid Margin="16" RowDefinitions="Auto,Auto,*,Auto">
        <TextBlock x:Name="PromptText" Grid.Row="0" Text="Enter value:" Margin="0,0,0,8" />

        <TextBox x:Name="InputBox"
                 Grid.Row="1"
                 Watermark="https://example.com/readme.md" />

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="8"
                    Margin="0,16,0,0">
            <Button Content="Cancel" Click="OnCancel" Width="80" />
            <Button Content="OK" Click="OnOk" Width="80" Classes="accent" />
        </StackPanel>
    </Grid>
</Window>
