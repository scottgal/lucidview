<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <AvaloniaUseCompiledBindingsByDefault>true</AvaloniaUseCompiledBindingsByDefault>

    <!-- AOT and Single File Settings -->
    <PublishAot>true</PublishAot>
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <TrimMode>partial</TrimMode>
    <InvariantGlobalization>false</InvariantGlobalization>

    <!-- App Info -->
    <AssemblyName>MarkdownViewer</AssemblyName>
    <RootNamespace>MarkdownViewer</RootNamespace>
    <Version>1.0.0</Version>
    <Description>Lightweight cross-platform GitHub-style markdown viewer</Description>
  </PropertyGroup>

  <!-- Prevent trimming of Avalonia reflection-based assemblies -->
  <ItemGroup>
    <TrimmerRootAssembly Include="Avalonia.Controls" />
    <TrimmerRootAssembly Include="Avalonia.Base" />
    <TrimmerRootAssembly Include="Avalonia.Markup.Xaml" />
    <TrimmerRootAssembly Include="Avalonia.Themes.Fluent" />
    <TrimmerRootAssembly Include="AvaloniaEdit" />
    <TrimmerRootAssembly Include="TextMateSharp" />
  </ItemGroup>

  <ItemGroup>
    <!-- Avalonia Core -->
    <PackageReference Include="Avalonia" Version="11.2.2" />
    <PackageReference Include="Avalonia.Desktop" Version="11.2.2" />
    <PackageReference Include="Avalonia.Themes.Fluent" Version="11.2.2" />
    <PackageReference Include="Avalonia.Fonts.Inter" Version="11.2.2" />

    <!-- Markdown Rendering with Syntax Highlighting -->
    <PackageReference Include="Markdown.Avalonia" Version="11.0.2" />
    <PackageReference Include="Markdown.Avalonia.Svg" Version="11.0.2" />
    <PackageReference Include="Markdown.Avalonia.SyntaxHigh" Version="11.0.2" />

    <!-- AvaloniaEdit with TextMate for code highlighting -->
    <PackageReference Include="AvaloniaEdit.TextMate" Version="11.1.0" />
    <PackageReference Include="TextMateSharp.Grammars" Version="1.0.64" />

    <!-- Diagnostics (debug only) -->
    <PackageReference Include="Avalonia.Diagnostics" Version="11.2.2" Condition="'$(Configuration)' == 'Debug'" />
  </ItemGroup>

</Project>
